
<h1>List of all the users</h1>

<div class="wrapper">
<h1>Users</h1>
<%= link_to 'Add New Post', new_post_path, class: 'btn-add-post' %>
  <ul>
    <% @users.each do |user| %>
      <li class="userNameWrapper">
          <div><img alt="Profile P."/></div>
            <div class="userName">
          <%= link_to user_path(user), class: 'userNameAnchor' do %>
            <h2><%= user.name %></h2>
            <h6>Number of posts: <%= user.posts.count %></h6>
          <% end %>
            </div>
      </li>
      
    <% end %>
  </ul>
</div>